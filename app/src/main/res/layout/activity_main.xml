<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.jinwoo.android.goriversion1.MainActivity">

    <TextView
        android:text="칼퇴를 위한 실무 엑셀"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/txtMainTitle"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:visibility="gone" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:id="@+id/scrollView">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:text="Taling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="normal|italic"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/test"
                android:id="@+id/imageView1"
                android:scaleType="fitXY"
                android:translationY="@dimen/activity_vertical_margin" />

            <com.jinwoo.android.goriversion1.RadiusImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/test2"
                android:id="@+id/imageView2"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:text="Ashton / Ashton"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/txtWrite"
                android:textAlignment="center" />

            <TextView
                android:text="칼퇴를 위한 실무 엑셀"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/txtTitle"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:textAlignment="center" />

            <TextView
                android:text="New"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:id="@+id/textView7"
                android:textColor="@color/colorAccent"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/framelayout">

            </FrameLayout>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/textView6" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/textView5" />


            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/textView4" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/textView3" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/textView2" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/textView1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">

                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab"
                    app:tabSelectedTextColor="@color/colorAccent"
                    style="@style/viewPagerTitle"/>

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/viewPager"
                    android:layout_below="@+id/tab"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
